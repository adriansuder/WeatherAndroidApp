<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WeatherAndroidApp"
             x:Class="WeatherAndroidApp.MainPage">

    <StackLayout>
        <Entry x:Name="cityEntry"></Entry>
        <Button x:Name="searchCity" Text="Search by city" Clicked="OnButtonWeatherClicked"></Button>
        <Label Text="Location"/>
        <Label Text="{Binding _name}"/>

        <Label Text="Temperature"/>
        <Label Text="{Binding _main._temperature}" />
        <Label Text="Icon source"/>
        <Label Text="{Binding _weather[0]._icon}" />
        <StackLayout HorizontalOptions="EndAndExpand">
            <Image Source="{Binding _weather[0]._icon}"
                   WidthRequest="30"
                   HeightRequest="30"/>
        </StackLayout>
    </StackLayout>

</ContentPage>
